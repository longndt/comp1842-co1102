<table border="1">
   <thead>
      <tr>
         <th colspan="3">Sports List</th>
      </tr>
      <tr>
         <th>Id</th>
         <th>English</th>
         <th>Vietnamese</th>
      </tr>
   </thead>
   <tbody>
       <!-- heach => foreach loop in hbs -->
      {{#each sports }}
      <tr>
         <td>{{ id }}</td>
         <td>{{ english }}</td>
         <td>{{ vietnamese }}</td>
      </tr>
      {{/each}}
   </tbody>
</table>